{
  "name": "gmd-printer-app",
  "bin": "dist/index.js",
  "version": "1.0.0",
  "description": "An application to print rollo reciepts.",
  "main": "dist/main.js",
  "engines": {
    "node": ">=16",
    "npm": ">=8",
    "yarn": ">=1"
  },
  "scripts": {
    "prestart": "yarn install",
    "start": "npm-run-all --parallel run:exe run:electron",
    "run:node": "node dist/index.js",
    "run:electron": "electron .",
    "build:electron": "electron-forge make",
    "run:exe": "./exe/gmd-printer-app",
    "startVirtualPrinters": "ts-node printerTest.ts",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "build": "tsc --skipLibCheck",
    "compile": "tsc --skipLibCheck",
    "makeCert": "cd ./ && for /f \"tokens=3 delims=: \" %i  in ('netsh interface ip show config name^=\"Ethernet\" ^| findstr \"IP Address\"') do mkcert localhost 127.0.0.1 ::1 0.0.0.0 %i",
    "makeExe": "yarn build && pkg .",
    "swagger": "tsoa spec"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node16-macos-x64"
    ],
    "outputPath": "exe"
  },
  "author": "Mudassir and Guilherme",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/send": "^0.17.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dhcp": "^0.2.20",
    "dotenv": "^16.0.1",
    "electron-updater": "^6.1.1",
    "express": "^4.17.1",
    "ip": "^1.1.8",
    "ipp": "^2.0.1",
    "ipp-printer": "^1.0.0",
    "local-devices": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "ngrok": "^4.3.3",
    "pdf-to-printer": "^5.4.0",
    "pkg": "^5.8.0",
    "supertest": "^6.2.4",
    "swagger-ui-express": "^4.6.0",
    "tsoa": "^5.0.0",
    "unix-print": "^1.2.0",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-deb": "^6.2.1",
    "@electron-forge/maker-rpm": "^6.2.1",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@types/ipp-printer": "^1.0.0",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^7.6.0",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "nodemon": "^2.0.19"
  }
}
